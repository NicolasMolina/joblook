<script type="text/javascript">
$(document).ready(function() {
        $('#required').hide();
	$(".dropdown1").msDropDown();
	
	$('.toggle_btn').click(function(){
		$(this).next().slideToggle();
		});
                
      $('#submit').click(function() {
          var description   =   $.trim($('#description').val());
          var error         =   0;
          
          var valid_array = [];
            valid_array['name']           = $.trim($('#name').val());
            valid_array['area_title']     = $('#area').val();
            valid_array['jobField_title'] = $('#jobField').val();
            valid_array['description']    = description;
             
            
            
            for(var key in valid_array){
                if(valid_array[key] == ""){
                   $('#'+key).css('border','1px solid red');
                   error = 1;
                 }else{
                     $('#'+key).css('border','');
                 }
            }
            
            if(description == 'INCLUDE OPTIONS LIKE; DO THEY REQUIRE TRANSPORT? HOW MANY DAYS A WEEK WILL THEY BE WORKING? IS THE JOB TEMPORAR'){
                $('#description').css('border','1px solid red');
                error = 1;
            }
            
            if(error == 1){
                $('#required').show();
                return false;
            }else{
                $('#required').hide();
                $.post('contact_mail.php',
                        $('#form').serialize(),
                        function(data){  
                              if(data == 1){  
                                 // $('#area option:contains("Select")').prop('selected',true);
                                  $('description').val('INCLUDE OPTIONS LIKE; DO THEY REQUIRE TRANSPORT? HOW MANY DAYS A WEEK WILL THEY BE WORKING? IS THE JOB TEMPORAR');
                                  $('#name,#salary').val('');
                                  $('#message').html("Your Message has been sent");
                              }else{
                                  $('#message').html("Message not sent");
                              }
                        });
                return false;
            }
          
      });
               
})
</script>
